<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".SelectParametersActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Calibration Results"
        android:textColor="#3949AB"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/calibHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/imgPix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pixel-to-Distance Ratio"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Select Height"
        android:textColor="#3949AB"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/dist20"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="20 cm" />

            <RadioButton
                android:id="@+id/dist50"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="50 cm" />

            <RadioButton
                android:id="@+id/dist100"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="100 cm" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Select Theta"
        android:textColor="#3949AB"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/ang1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="8°" />

            <RadioButton
                android:id="@+id/ang2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="10°" />

            <RadioButton
                android:id="@+id/ang3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="25°" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/resBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3949AB"
        android:text="show results"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


</LinearLayout>